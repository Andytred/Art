
<div class="container">
  <div class="banner d-flex align-items-center justify-content-between">
    <div class="bannertextbox">
      <h2>  Design your space </h2>
      <h2>  Rent an artwork </h2>
    </div>
    <div>
      <%= form_tag artworks_path, method: :get do %>
        <%= text_field_tag :query,
          params[:query],
          class: "form-control",
          placeholder: "Find artworks"
        %>
        <%= submit_tag "Search", class: "btn btn-primary" %>
      <% end %>
    </div>
  </div>
</div>
