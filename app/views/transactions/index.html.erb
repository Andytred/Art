<div class="container">
  <div class="row">
    <% @sell_transactions.each do |transaction| %>
      <div class="col-lg-4 col-sm-12">
        <div class="art-card fixed-height-two">
          <div class="transaction">
            <h3> <%= transaction.artwork.title %> </h3>
            <p class="card-text"> <strong>From:</strong> <%= transaction.start_date %> <strong>To:</strong> <%= transaction.end_date %></p>
            <% if transaction.confirmation == 'pending' %>
              <button type="button" class="btn btn-dark btn-sm ml-3">
                <%= link_to 'Accept', transaction_accept_path(transaction) %>
              </button>
              <button type="button" class="btn btn-light btn-sm">
                <%= link_to 'Reject', transaction_reject_path(transaction) %>
              </button>
            <% else %>
              <h3><%= transaction.confirmation %></h3>
            <% end %>
          </div>
        </div>
      </div>
    <% end %>
    <% @buy_transactions.each do |transaction| %>
      <div class="col-lg-4 col-sm-12">
        <div class="art-card fixed-height-two">
          <div class="transaction">
            <h3> <%= transaction.artwork.title %> </h3>
            <p class="card-text"> <strong>From:</strong> <%= transaction.start_date %> <strong>To:</strong> <%= transaction.end_date %></p>
            <h3><%= transaction.confirmation %></h3>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>

